<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ca.mcgill.ecse.assetplus.javafx.fxml.controllers.SpecificAssetPageController">

    <Label text="Asset Type"/>

    <HBox spacing="10">
        <TextField fx:id="assetNumberTextField" promptText="Asset Number"/>
        <TextField fx:id="floorNumberTextField" promptText="Floor Number"/>
        <TextField fx:id="roomNumberTextField" promptText="Room Number"/>
        <TextField fx:id="purchaseDateTextField" promptText="yyyy-MM-dd"/>
        <TextField fx:id="assetTypeNameTextField" promptText="Asset Type"/>

        <Button text="Add Specific Asset" onAction="#addSpecificAsset"/>
    </HBox>

   
</VBox>
