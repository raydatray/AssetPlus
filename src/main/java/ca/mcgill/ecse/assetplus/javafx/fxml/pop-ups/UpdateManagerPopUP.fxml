<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #252627; -fx-border-color: #71B6C8; fx-border-width: 2; -fx-border-radius: 5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.UpdateManagerPasswordController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" style="-fx-background-color: #252627;" >
            <children>
                <Text style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-fill: #E5E3D9;" text="Reset Password">
               <font>
                  <Font size="1612.0" />
               </font>
               <VBox.margin>
                  <Insets left="-155.0" />
               </VBox.margin></Text>
                <Text style="-fx-fill: #E5E3D9; -fx-opacity: 0.6;" text="Change the password for the manager account" wrappingWidth="280">
               <VBox.margin>
                  <Insets left="2.0" />
               </VBox.margin></Text>
                <PasswordField fx:id="currentPasswordField" promptText="Current Password" 
                     style="-fx-background-radius: 5; 
                            -fx-background-color: #252627; 
                            -fx-text-fill: #E5E3D9;
                            -fx-border-color: transparent transparent rgba(229, 227, 217, 0.6) transparent; 
                            -fx-border-width: 0 0 1 0; 
                            -fx-border-radius: 0;">
               <VBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </VBox.margin></PasswordField>
                <PasswordField fx:id="newPasswordField" promptText="New Password" 
                     style="-fx-background-radius: 5; 
                            -fx-background-color: #252627; 
                            -fx-text-fill: #E5E3D9;
                            -fx-border-color: transparent transparent rgba(229, 227, 217, 0.6) transparent; 
                            -fx-border-width: 0 0 1 0; 
                            -fx-border-radius: 0;">
               <VBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </VBox.margin></PasswordField>
               <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" 
                     style="-fx-background-radius: 5; 
                            -fx-background-color: #252627; 
                            -fx-text-fill: #E5E3D9;
                            -fx-border-color: transparent transparent rgba(229, 227, 217, 0.6) transparent; 
                            -fx-border-width: 0 0 1 0; 
                            -fx-border-radius: 0;">
               <VBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </VBox.margin></PasswordField>
               <Button maxWidth="Infinity" onAction="#handleResetPassword" text="Reset Password"
                  style="-fx-background-radius: 5; 
                         -fx-background-color: #3A3B3C; 
                         -fx-text-fill: #71B6C8; 
                         -fx-border-color: #E5E3D9; 
                         -fx-border-radius: 5;
                         -fx-border-color: #71B6C8; 
                         -fx-border-width: 0.75; 
                         -fx-border-radius: 8;">
                  <VBox.margin>
                      <Insets bottom="1.0" left="1.0" right="2.0" top="2.0" />
                  </VBox.margin>
               </Button>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </VBox>
    </children>
</AnchorPane>