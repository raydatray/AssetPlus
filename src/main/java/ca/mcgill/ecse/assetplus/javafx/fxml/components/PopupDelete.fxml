<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="316" prefWidth="712" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.DeleteConfirmationController">
    <children>
        <VBox alignment="CENTER" layoutX="-7.0" prefHeight="324.0" prefWidth="729.0" spacing="20.0" style="-fx-background-color: #252627;">
            <children>
                <HBox alignment="TOP_RIGHT" prefWidth="692.0" spacing="10.0">
                    <Button minWidth="50.0" onAction="#handleExit" prefHeight="25.0" prefWidth="30.0" style="-fx-background-color: #6699CC; -fx-text-fill: #E5E3D9;" text="X" />
                </HBox>
                <Region />
                <Text style="-fx-font: 25px 'Arial'; -fx-font-weight: bold; -fx-fill: #E5E3D9;" text="Delete?" />
