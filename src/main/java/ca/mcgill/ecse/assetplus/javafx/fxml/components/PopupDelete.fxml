<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="114" prefWidth="240" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.DeleteConfirmationController">
    <children>
        <VBox alignment="CENTER" layoutX="10.0" layoutY="8.0" prefHeight="165.0" prefWidth="251.0" spacing="20.0">
            <children>
                <HBox alignment="TOP_RIGHT" spacing="10.0">
                    <Region HBox.hgrow="ALWAYS" />
                    <Button minWidth="28.0" onAction="#handleExit" prefHeight="25.0" prefWidth="28.0" text="x" />
                </HBox>
                <Text style="-fx-font: 14px 'Arial'; -fx-font-weight: bold;" text="Delete?" />
                <Text text="This action can't be undone." textAlignment="CENTER" wrappingWidth="200" />
                <HBox alignment="CENTER" spacing="10.0">
                    <Button minWidth="50.0" onAction="#handleConfirmDelete" text="Yes" />
                    <Button minWidth="50.0" onAction="#handleCancelDelete" text="No" />
                </HBox>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
