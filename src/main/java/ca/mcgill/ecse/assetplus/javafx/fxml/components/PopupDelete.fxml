                <HBox alignment="CENTER" prefHeight="170.0" prefWidth="692.0" spacing="10.0">
                    <Button minWidth="90.0" onAction="#handleConfirmDelete" style="-fx-background-color: #6699CC; -fx-text-fill: #E5E3D9;" text="Yes" />
                    <Region prefHeight="121.0" prefWidth="173.0" />
                    <Button minWidth="90.0" onAction="#handleCancelDelete" style="-fx-background-color: #6699CC; -fx-text-fill: #E5E3D9;" text="No" />
                </HBox>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
