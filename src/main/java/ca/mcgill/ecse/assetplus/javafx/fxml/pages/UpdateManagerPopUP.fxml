<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: 252627;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.UpdateManagerPasswordController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Text style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-font-weight: bold;" text="Reset Password">
               <font>
                  <Font size="1612.0" />
               </font>
               <VBox.margin>
                  <Insets left="-155.0" />
               </VBox.margin></Text>
                <Text text="Change the password for the manager account" wrappingWidth="280">
               <VBox.margin>
                  <Insets left="2.0" />
               </VBox.margin></Text>
                <PasswordField fx:id="currentPasswordField" promptText="Current Password">
               <VBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </VBox.margin></PasswordField>
                <PasswordField fx:id="newPasswordField" promptText="New Password">
               <VBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </VBox.margin></PasswordField>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password">
               <VBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </VBox.margin></PasswordField>
                <Button maxWidth="Infinity" onAction="#handleResetPassword" text="Reset Password">
               <VBox.margin>
                  <Insets bottom="1.0" left="1.0" right="2.0" top="2.0" />
               </VBox.margin></Button>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </VBox>
    </children>
</AnchorPane>
