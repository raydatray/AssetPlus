<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ca.mcgill.ecse.assetplus.javafx.fxml.controllers.AssetTypePageController">

    <Label text="Asset Type"/>

    <HBox spacing="10">
        <TextField fx:id="assetNameTextField" promptText="Asset Name"/>
        <TextField fx:id="lifeSpanTextField" promptText="Expected Life Span"/>
        <Button text="Add Asset Type" onAction="#addAssetType"/>
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="oldAssetNameTextField" promptText="Old Asset Name"/>
        <TextField fx:id="newAssetNameTextField" promptText="New Asset Name"/>
        <TextField fx:id="newLifeSpanTextField" promptText="New Expected Life Span"/>
        <Button text="Update Asset Type" onAction="#updateAssetType"/>
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="assetNameTextField" promptText="Asset Name"/>
        <Button text="Delete Asset Type" onAction="#deleteAssetType"/>
    </HBox>

</VBox>
